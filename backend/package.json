{
  "name": "wecinema-backend",
  "version": "1.0.0",
  "description": "Wecinema API - Production-ready Node.js backend service",
  "main": "src/app.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "prod": "NODE_ENV=production node src/app.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "db:seed": "node src/scripts/seed.js",
    "db:migrate": "node src/scripts/migrate.js",
    "clean": "rm -rf node_modules && rm -rf logs && npm install"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "api",
    "marketplace",
    "video",
    "streaming"
  ],
  "author": "Wecinema Team",
  "license": "ISC",
  "private": true,
  "dependencies": {
    "@sentry/node": "^7.120.3",
    "@sentry/profiling-node": "^9.22.0",
    "@slack/web-api": "^7.9.1",
    "@slack/webhook": "^7.0.5",
    "argon2": "^0.40.1",
    "axios": "^1.7.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "creatomate": "^1.2.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.4.0",
    "firebase-admin": "^12.3.0",
    "google-auth-library": "^9.11.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.10.1",
    "resend": "^4.2.0",
    "socket.io": "^4.7.5",
    "stripe": "^16.12.0",
    "systeminformation": "^5.26.2",
    "twilio": "^5.6.0",
    "whois-json": "^2.0.4",
    "winston": "^3.17.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0"
  }
}